rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific data - only the user can access their own data
    match /users/{userId} {
      // User settings document (selectedTeamId, selectedSeasonId, etc.)
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User's subcollections (teams, players, matches, etc.)
      match /{collection}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Fallback rule for development (expires Oct 15, 2025)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 15);
    }
  }
}
